{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "moduleDetection": "force",
    "noEmit": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "strict": true
  },
  "include": ["src"]
}
